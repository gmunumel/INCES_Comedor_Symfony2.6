      <label for="roles">Rol</label>
      {{ form_widget(edit_form.rol,  { 'attr': {'class': 'text'}}) }}
    </div>
    <div id="usuario-image-block" class="field">
      <label for="image">{{ 'Image' }}</label>
      {{ form_widget(edit_form.image,  { 'attr': {'class': 'text'}}) }}
    </div>
    <div class="action">
      <input id="login-submit" class="submit-button" type="submit" value="{{ 'Update' }}" />
