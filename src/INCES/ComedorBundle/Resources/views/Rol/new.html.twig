<div id="col-text">

  <h1>{{ 'Add' }} Rol</h1>
  <form class="rol_form generic" action="{{ app.request.uriForPath('/rol/create') }}" method="post" {{ form_enctype(form) }}>
    {#
    {{ form_widget(form) }}
