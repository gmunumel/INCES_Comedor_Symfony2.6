{% if pagination|length != 0 %}
<table class="bordered">
  <thead>
    <tr>
      <th>{{ 'Id' }}</th>
      <th>{{ 'Name' }}</th>
      <th>{{ 'Last Name' }}</th>
      <th>{{ 'Card Number' }}</th>
      <th>Rol</th>
    </tr>
  </thead>
  <tbody>
  <tr>
    <td>{{ pagination.0.usuario.cedula }}</td>
    <td>{{ pagination.0.usuario.nombre }}</td>
    <td>{{ pagination.0.usuario.apellido }}</td>
    <td>{{ pagination.0.usuario.ncarnet }}</td>
    <td>{{ pagination.0.usuario.rol.nombre }}</td>
  </tr>
  </tbody>
</table>

{# Totales #}
<table class="bordered">
  <thead>
    <tr>
      <th>{{ 'Date' }}</th>
      <th>Menu</th>
    </tr>
  </thead>
  <tbody>
  {% for entity in pagination %}
  <tr>
    <td>{{ entity.dia|date('d/m/Y') }}</td>
    {% if entity.menu == "" %}
    <td>{{ 'There is not information available' }}</td>
    {% else %}
    <td>{{entity.menu}}</td>
    {% endif %}
  </tr>
  {% endfor %}
  </tbody>
</table>
{% else %}
<p>{{ 'No hay informaci√≥n.' }}</p>
{% endif %}

